{
  "compilerOptions": {
    "paths": {
      "@services/*": ["./src/services/*"],
      "@models/*": ["./src/models/*"],
      "@constants": ["./src/constants"]
    },
    "rootDir": "src",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "es2022",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  }
}